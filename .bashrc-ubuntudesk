# .bashrc

test -r $HOME/.bashrc-custom && source $HOME/.bashrc-custom

# Set neovim as default vim
alias vim="nvim"

# Both are needed to get glxinfo output the correct driver
export MESA_D3D12_DEFAULT_ADAPTER_NAME=NVIDIA
export GALLIUM_DRIVER=d3d12

# aider related vars
export OLLAMA_API_BASE=https://jyu2401-62.tail5b278e.ts.net/ollamapi
export AIDER_MODEL=ollama_chat/gemma3:27b
export AIDER_MAP_TOKENS=8192
export AIDER_MAX_CHAT_HISTORY_TOKENS=32768
